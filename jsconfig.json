{
  "compilerOptions": {
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "nodenext",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "types": ["vitest/globals"],
    "paths": {
      "~/*": ["./public/*"]
    }
  },
  "include": ["public/graph.js", "tests/**/*.js"],
  "exclude": ["public/cytoscape.min.js", "public/lucide.min.js", "node_modules"]
}
