{
  "compilerOptions": {
    "checkJs": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "nodenext",
    "lib": ["ES2024", "DOM", "DOM.Iterable"],
    "types": ["vitest/globals"],
    "paths": {
      "~/*": ["./public/*"],
      "https://unpkg.com/cytoscape@3.33.1/dist/cytoscape.esm.mjs": ["./node_modules/cytoscape"]
    }
  },
  "include": ["public/components/graph.js", "public/components/*.js", "tests/**/*.js"],
  "exclude": ["public/cytoscape.min.js", "public/lucide.min.js", "node_modules"]
}
